<%- include('../partials/header') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        My Account
                    </h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar-placeholder mb-3">
                            <% if (user.avatar) { %>
                                <img src="<%= user.avatar %>" alt="Avatar" style="width: 110px; height: 110px; border-radius: 50%; object-fit: cover;">
                            <% } else { %>
                                <i class="fas fa-user fa-3x text-muted"></i>
                            <% } %>
                        </div>
                        <h3 class="mb-1"><%= user.username %></h3>
                        <p class="text-muted mb-4"><%= user.email %></p>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <a href="/listings/my-listings" class="btn btn-outline-primary w-100 py-3">
                                <i class="fas fa-list me-2"></i>
                                My Listings
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/listings/new" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-plus me-2"></i>
                                Create New Listing
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
body {
    background: #f5f6fa;
}

.container {
    max-width: 600px;
}

.card {
    border: none;
    border-radius: 18px;
    box-shadow: 0 6px 32px rgba(0,0,0,0.08);
    background: #fff;
}

.card-header {
    border-bottom: 1px solid #ececec;
    border-radius: 18px 18px 0 0 !important;
    background: #fff;
    padding: 2rem 1.5rem 1.2rem 1.5rem;
}

.card-header h2 {
    font-size: 2rem;
    font-weight: 800;
    color: #222;
    letter-spacing: 1px;
}

.card-body {
    padding: 2rem 1.5rem 2rem 1.5rem;
}

.avatar-placeholder {
    width: 110px;
    height: 110px;
    background-color: #f0f1f6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.2rem auto;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.avatar-placeholder i {
    font-size: 3.5rem;
    color: #bfc9d1;
}

h3.mb-1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #222;
}

.text-muted {
    color: #7b8a97 !important;
    font-size: 1.05rem;
}

.row.g-3 {
    margin-top: 2rem;
}

.btn {
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.1rem;
    padding: 0.9rem 0;
    transition: all 0.2s;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    border: none;
}

.btn-outline-primary {
    color: #3498db;
    border: 2px solid #3498db;
    background: #fff;
}

.btn-outline-primary:hover, .btn-outline-primary:focus {
    background: #3498db;
    color: #fff;
    box-shadow: 0 4px 16px rgba(52,152,219,0.12);
    transform: translateY(-2px) scale(1.03);
}

.btn-outline-success {
    color: #27ae60;
    border: 2px solid #27ae60;
    background: #fff;
}

.btn-outline-success:hover, .btn-outline-success:focus {
    background: #27ae60;
    color: #fff;
    box-shadow: 0 4px 16px rgba(39,174,96,0.12);
    transform: translateY(-2px) scale(1.03);
}

@media (max-width: 768px) {
    .container {
        padding: 0 0.5rem;
    }
    .card-header, .card-body {
        padding: 1.2rem 0.7rem;
    }
    .avatar-placeholder {
        width: 80px;
        height: 80px;
    }
    h3.mb-1 {
        font-size: 1.2rem;
    }
}

@media (max-width: 480px) {
  .container {
    max-width: 100% !important;
    padding: 0 0.2rem !important;
  }
  .card, .card-body {
    padding: 0.7rem 0.3rem !important;
  }
  h1, h2, h3 {
    font-size: 1.1rem !important;
  }
  .btn, .btn-lg {
    font-size: 1rem !important;
    padding: 0.7rem 0.5rem !important;
  }
}
</style>

<%- include('../partials/footer') %>