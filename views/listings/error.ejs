<% layout('layouts/boilerplate') %>

<div class="error-container" role="alert" aria-live="assertive">
    <div class="error-content">
        <div class="error-icon">
            <i class="fas fa-exclamation-circle"></i>
        </div>
        <h1 class="error-title">Oops! Something went wrong</h1>
        <div class="error-details">
            <p class="error-message"><%= message %></p>
            <p class="error-status">Status Code: <%= typeof status !== 'undefined' ? status : 404 %></p>
        </div>
        <div class="error-actions">
            <a href="/listings" class="btn-home" role="button">
                <i class="fas fa-home" aria-hidden="true"></i>
                <span>Back to Listings</span>
            </a>
            <button onclick="history.back()" class="btn-back" role="button">
                <i class="fas fa-arrow-left" aria-hidden="true"></i>
                <span>Go Back</span>
            </button>
        </div>
    </div>
</div>

<style>
    .error-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background-color: #f8f9fa;
    }

    .error-content {
        background: white;
        padding: 3rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 600px;
        width: 100%;
        position: relative;
    }

    .error-icon {
        font-size: 4rem;
        color: #dc3545;
        margin-bottom: 1rem;
    }

    .error-title {
        color: #dc3545;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .error-details {
        margin-bottom: 2rem;
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    .error-message {
        font-size: 1.2rem;
        color: #495057;
        margin-bottom: 0.5rem;
        word-wrap: break-word;
    }

    .error-status {
        font-size: 1rem;
        color: #6c757d;
        font-weight: 500;
    }

    .error-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn-home, .btn-back {
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }

    .btn-home {
        background-color: #0d6efd;
        color: white;
    }

    .btn-home:hover, .btn-home:focus {
        background-color: #0b5ed7;
        transform: translateY(-2px);
        outline: none;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

    .btn-back:hover, .btn-back:focus {
        background-color: #5c636a;
        transform: translateY(-2px);
        outline: none;
    }

    @media (max-width: 768px) {
        .error-content {
            padding: 2rem;
            margin: 1rem;
        }

        .error-title {
            font-size: 2rem;
        }

        .error-actions {
            flex-direction: column;
        }

        .btn-home, .btn-back {
            width: 100%;
            justify-content: center;
        }
    }

    /* Focus styles for accessibility */
    .btn-home:focus-visible, .btn-back:focus-visible {
        outline: 3px solid #0d6efd;
        outline-offset: 2px;
    }
</style> 