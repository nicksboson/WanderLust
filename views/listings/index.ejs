<% layout('/layouts/boilerplate') %>
<div class="page-header">
    <div class="container">
        <h1>Discover Your Next Adventure</h1>
        <p>Explore unique stays and experiences around the world</p>
    </div>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 listing-grid">
        <% for(let list of listings) { %>
            <div class="col mb-4">
                <a href="/listings/<%= list._id %>" class="text-decoration-none">
                    <div class="card h-100">
                        <div class="position-relative">
                            <img src="<%= list.image %>" class="card-img-top" alt="<%= list.title %>">
                            <div class="price-badge">
                                â‚¹<%= list.price.toLocaleString('en-IN') %>/night
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate"><%= list.title %></h5>
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                <span class="text-truncate d-inline-block" style="max-width: 100%;">
                                    <%= list.location %>, <%= list.country %>
                                </span>
                            </p>
                            <div class="rating mt-auto">
                                <% if (list.numReviews > 0) { %>
                                    <% let fullStars = Math.floor(list.averageRating); %>
                                    <% for(let i = 0; i < fullStars; i++) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                    <% if (list.averageRating - fullStars >= 0.5) { %>
                                        <i class="fas fa-star-half-alt"></i>
                                        <% fullStars++; %>
                                    <% } %>
                                    <% for(let i = fullStars; i < 5; i++) { %>
                                        <i class="far fa-star"></i>
                                    <% } %>
                                    <span class="ms-1 text-muted">(<%= list.averageRating %>)</span>
                                <% } else { %>
                                    <% let randomDisplayRating = (Math.random() * (5 - 3.5) + 3.5).toFixed(1); %>
                                    <% let fullStars = Math.floor(randomDisplayRating); %>
                                    <% for(let i = 0; i < fullStars; i++) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                    <% if (randomDisplayRating - fullStars >= 0.5) { %>
                                        <i class="fas fa-star-half-alt"></i>
                                        <% fullStars++; %>
                                    <% } %>
                                    <% for(let i = fullStars; i < 5; i++) { %>
                                        <i class="far fa-star"></i>
                                    <% } %>
                                    <span class="ms-1 text-muted">(<%= randomDisplayRating %>)</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>

<style>
    .page-header {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixlib=rb-4.0.3');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: white;
        padding: 6rem 0;
        margin-bottom: 3rem;
        text-align: center;
    }

    .page-header h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .page-header p {
        font-size: 1.5rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        display: flex;
        flex-direction: column;
        background: white;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    }
    
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1) !important;
    }

    .card-img-top {
        height: 280px;
        object-fit: cover;
        transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .card:hover .card-img-top {
        transform: scale(1.08);
    }

    .card-body {
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        background: white;
    }

    .card-title {
        font-size: 1.35rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 0.75rem;
        line-height: 1.4;
    }

    .card-text {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
    }

    .card-text i {
        color: #2c3e50;
        margin-right: 0.5rem;
        font-size: 1rem;
    }

    .price-badge {
        position: absolute;
        top: 1.25rem;
        right: 1.25rem;
        background: rgba(255, 255, 255, 0.95);
        color: #2c3e50;
        padding: 0.6rem 1.2rem;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 2;
        backdrop-filter: blur(5px);
    }

    .card:hover .price-badge {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        background: rgba(255, 255, 255, 0.98);
    }

    .rating {
        color: #ffc107;
        font-size: 1rem;
        margin-top: auto;
        display: flex;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .rating i {
        margin-right: 0.25rem;
    }

    .rating .ms-1 {
        color: #666;
        font-size: 0.9rem;
    }

    .listing-grid {
        margin: 0 !important;
        padding: 0 2rem !important;
        width: 100vw;
    }

    .row {
        margin: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
    }

    @media (max-width: 768px) {
        .page-header {
            padding: 4rem 0;
        }

        .page-header h1 {
            font-size: 2.5rem;
        }

        .page-header p {
            font-size: 1.2rem;
        }

        .card-img-top {
            height: 220px;
        }
        
        .listing-grid {
            padding: 0 1rem !important;
        }

        .card-title {
            font-size: 1.25rem;
        }

        .price-badge {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }
    }
</style>

